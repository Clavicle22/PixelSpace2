import SwiftUI

struct FuseeCardCrewView: View {
    
    var fusee : Fusees

    var body: some View {
        
        VStack(spacing : -20){
            
            ForEach(fusee.crewMemberParticipant) { member in
                
                HStack {
                    Image("asrtro")
                        .resizable()
                        .scaledToFit()
                        .frame(width: 100)
                    VStack(alignment: .leading) {
                        Text(member.info.name)
                            .font(.title2)
                            .fontWeight(.bold)
                            .foregroundStyle(.white)
                        Text(member.info.role)
                            .italic()
                            .fontWeight(.bold)
                            .foregroundStyle(.white.secondary)
                        Text(member.info.countryFlag)
                    }
                    Spacer()
                    
                }
                .frame(maxWidth: .infinity)
                .background(Color.black.secondary)
                .cornerRadius(20)
                .padding()
                
            }
        }
    }
}

#Preview {
    FuseeCardCrewView(fusee: .apollo8)
}
