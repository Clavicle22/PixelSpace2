import SwiftUI

struct PlanetDetailView: View {
    
    let planet: Planets
    
    @Environment(\.dismiss) var dismiss // pour revenir en arrière

    var body: some View {
        ZStack{
            Color.black
                .ignoresSafeArea()
            
            ScrollView(.vertical){
                VStack(spacing: -20) {
                    Image(planet.image)
                        .resizable()
                        .scaledToFit()
//
                    VStack(alignment: .leading, spacing: 10) {
                        Text(planet.name)
                            .font(.largeTitle)
                            .fontWeight(.bold)
                            .foregroundStyle(.black)
                        Text(planet.details)
                            .font(.body)
                            .foregroundStyle(.black)
                    }
                    .padding(30)
                    .background(
                        UnevenRoundedRectangle(
                            topLeadingRadius: 20,
                            bottomLeadingRadius: 0,
                            bottomTrailingRadius: 0,
                            topTrailingRadius: 20
                        )
                        .fill(planet.color)
                        
                    )
                    
                }
            }
            
        }
    }
}

